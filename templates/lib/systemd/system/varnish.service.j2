# {{ ansible_managed }}

[Unit]
Description=Varnish HTTP accelerator
Documentation=https://www.varnish-cache.org/docs/4.1/ man:varnishd

[Service]
Type=simple
LimitNOFILE=131072
LimitMEMLOCK=82000
ExecStart=/usr/sbin/varnishd -j unix,user=vcache -F -a {{ varnish_listen_host }}:{{ varnish_listen_port }} -T {{ varnish_admin_host }}:{{ varnish_admin_port }} -f /etc/varnish/default.vcl -S /etc/varnish/secret -s {{ varnish_storage }}
ExecReload=/usr/share/varnish/reload-vcl
ProtectSystem=full
ProtectHome=true
PrivateTmp=true
PrivateDevices=true

[Install]
WantedBy=multi-user.target
